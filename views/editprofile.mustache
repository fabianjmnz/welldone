{{>head}}

<header class="header desktop-header">
        <div class="row">
            <div class="col-4">
                <a href='/'><b>WellDone</b></a>
            </div>
            <div id="sign-out-profile-div" class="col">
                <a href="/acct/{{userPage.email}}" id="account-button" style='vertical-align:sub'>Account</a>
                <a href="/aboutus" id="aboutus-button">About Us</a>
                <form method="POST" action="/logout">
                    <button id="logout-button" style='vertical-align:sub;'>Log out</button>
                </form>
            </div>
        </div>
</header>

<!-- MOBILE HEADER -->

<div class="hamburger-menu navbar-1 navbar navbar-light lighten-4 row">
  <div class="home-link-mobile">
    <a class="home-link-text" href='/'><b>WellDone</b></a>
  </div>
  <div>
    <button class="navbar-toggler toggler-example" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1"
      aria-controls="navbarSupportedContent1" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"><i
          class="fas fa-bars fa-1x"></i></span></button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent1">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a href="/acct/{{userPage.email}}" id="account-button" style='vertical-align:sub'>Account</a>
        </li>
        <li class="nav-item">
          <a href="/aboutus" id="aboutus-button" style="vertical-align:sub">About Us</a>
        </li>
        <li class="nav-item">
          <form class="hamburger-logout" method="POST" action="/logout">
              <button class="logout-button-hamburger" style='vertical-align:sub;'>Log out</button>
          </form>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="row d-flex">
  <div id="blog-column" class="col">

      <div class="d-flex py-3"></div>

    <div>
        {{#userPage}}
            <h1 class="username-text">{{userPage.name}}</h1>
        {{/userPage}}
    </div>

    <div class="mt-3">
        <p class="write-post-textarea-name-text" id="change-pic-text">Change profile picture:</p>
        <form action="/acct/user_image" method="post" enctype="multipart/form-data">
          <input class="choose-file-text" type="file" name="user_image" accept="image/jpeg, image/jpg, image/png">
          <button id="save-photo-button">Save</button>
        </form>
        <img id="profile-pic-img" src="{{userPage.user_image}}" class="text-info" alt="Profile picture">
        <form class="" action="/acct/editprofile/updateProfile" method="post">
          <p class="write-post-textarea-name-text" id="change-pic-text">Change profile Name:</p>
          <input class="reg-textboxes" type="text" name="name" placeholder="Full name" />
          <button id="update-profile-button">Update Profile</button>
        </form>
    </div>

    <div class="d-flex py-3"></div>

  </div>
</div>

{{>footer}}
