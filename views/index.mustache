{{> head}}

<!--HEADER-->

{{> header}}

<!--CATEGORY SCROLL BAR-->
{{> carousel}}
<!--MOST POPULAR (DESKTOP ONLY)-->

<div class="row d-flex py-3"></div>

<div id="most-popular" class="row d-flex">
    <div id="popular-column" class="col">
        <div class="row d-flex">
        {{#popular}}
            <div class="col-3 popular-posts ">
                <img src="{{postImage.imageURL}}" onerror=this.src="/post_images/defaultImage.png">
                <p class="popular-title-text"><a href='/article/{{id}}'>
                    {{title}}</a>
                </p>
                <ul class="nextway">
                    <div class="num">{{notification.length}} Likes</div>
                    {{#notifications}}
                    <div style="display:none" class="sum">{{type}}{{post_id}}</div>
                    {{/notifications}}
                </ul>
                {{! returns top for post by Id }}
                <div class="count"></div>
            </div>

        {{/popular}}

        </div>
    </div>
</div>

<!--HORIZONTAL LINE-->

<div class="row d-flex py-3">
    <hr class="article-hr text-light">
</div>

<!--BLOG LIST START-->
<div class="row d-flex">
<div id="blog-column" class="col">

{{#aPost}}
<div class="row d-flex">
    <div class="col-6">

        <p class="popular-title-text"><a href='/article/{{id}}'>
                    {{title}}</a>
        </p>

        <p class="text-light post-secondary-text opener">{{body}}
        </p>
        <div class="row d-flex">
            <div class="col-10">
                <p class="author-text"><a href="/acct/{{user.email}}">
                    {{user.name}}</a><span>
                in<span class="category-text">
                  {{#category}}
                  <a href="/category/{{category}}">{{category}}</a></span></span>
                  {{/category}}
                </p>
                <p class="post-secondary-text text-light">
                <div class="datesplit">
                    {{createdAt}}</div>
                    <span>
                        <form method="POST" action="/notify">
                            <input type="hidden" name="postId" value="{{id}}" />
                            <input type="hidden" name="type" value="like" />
                            <input type="hidden" name="ownerId" value="{{user_id}}" />
                            <button class="heart" {{hideAdd}}><i class="heart fa fa-heart-o" ></i></button>
                        </form>
                        <form method="POST" action="/acct/removeFavourite">
                            <input type="hidden" name="favourite_id" value="{{liked.id}}">
                            <button class="heart" {{hideRemove}}><i class="heart fa fa-heart" ></i></button>
                        </form>
                    <span></span> {{likes.length}} likes
                </p>

            </div>
        </div>
    </div>
     <div class="col-6 post-image">
        <img src="{{postImage.imageURL}}" onerror=this.src="/post_images/defaultImage.png">
    </div>
</div>

<div class="row d-flex py-3"></div>
{{/aPost}}
</div>
</div>


<!--FOOTER-->

{{> footer}}
<script src="heart.js"></script>
<script src="datesplit.js"></script>
<script src="opener.js"></script>
<script src="category.js"></script>
<script src="notification.js"></script>
<script src="client.js"></script>
