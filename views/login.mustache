{{>head}}
<header class="header">
        <div>
        <a id="login-div" href='#'><b>WellDone</b></a> 
        </div>    
</header>

<div class="row d-flex py-3"></div>

<div id="login-form" class="row d-flex justify-content-center">
    <div class="col-9">
        <h1 class="text-light">Log In</h1>
        <form method="POST" action="/login">
            <input class="login-textboxes" type="text" name="email" placeholder="Email" />
            <input class="login-textboxes" type="password" name="password" placeholder="Password" />
            <button id="login-button">Log In</button>
        </form>
    </div>
</div>

<div class="row d-flex py-3"></div>

<div class="row d-flex justify-content-center py-3">
    <div class="col-9">
        <h1 class="text-light">First time here? <span id="join-welldone-text">Join Welldone</span></h1>
        <p>
            Create an account to receive great stories in your inbox, personalize your homepage, and follow authors and topics that you love.
        </p>
        <form method="POST" action="/register">
            <input class="login-textboxes" type="text" name="name" placeholder="Name" />
            <input class="login-textboxes" type="text" name="email" placeholder="Email" />
            <input class="login-textboxes" type="password" name="password" placeholder="Password" />
            <input class="login-textboxes" type="password" name="confirmPassword" placeholder="Confirm password" />
            <button id="login-button">Sign Up</button>
        </form>
    </div>
</div>

{{>footer}}
